doctype html
html(ng-app='main')
  head
    base(href='/')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - My Express Application
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.min.js')
  body(class="nav, pagination, carousel, panel-title")
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') #{title}
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='/home') Home
            li
              a(href='/about') About
            li
              a(href='/contact') Contact
    .container.body-content
      block content
      hr
      footer
        p &copy; #{year} - My Express Application

    script(src='/javascripts/respond.js')
    script(src='/javascripts/angular.min.js')
    script(src='/javascripts/angular-route.js')
    script(src='/javascripts/angular-ui.min.js')
    script(src='/javascripts/angular-animate-min.js')
    script(src='/javascripts/app/app.js')
    script(src='/javascripts/app/contact.js')

    block scripts
 
